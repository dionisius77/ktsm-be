{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/auth-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "./apps",
  "projects": {
    "auth-api": {
      "type": "application",
      "root": "apps/auth-api/src",
      "entryFile": "main",
      "sourceRoot": "apps/auth-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-api/tsconfig.app.json",
        "assets": [
          {
            "include": "common/envs/*.env",
            "outDir": "dist/apps/auth-api/src/common/helper"
          }
        ]
      }
    },
    "parking-api": {
      "type": "application",
      "root": "apps/parking-api/src",
      "entryFile": "main",
      "sourceRoot": "apps/parking-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/parking-api/tsconfig.app.json",
        "assets": [
          {
            "include": "common/envs/*.env",
            "outDir": "dist/apps/parking-api/src/common/helper"
          }
        ]
      }
    },
    "entities": {
      "type": "library",
      "root": "libs/entities",
      "entryFile": "index",
      "sourceRoot": "libs/entities/src",
      "compilerOptions": {
        "tsConfigPath": "libs/entities/tsconfig.lib.json"
      }
    },
    "interceptors": {
      "type": "library",
      "root": "libs/interceptors",
      "entryFile": "index",
      "sourceRoot": "libs/interceptors/src",
      "compilerOptions": {
        "tsConfigPath": "libs/interceptors/tsconfig.lib.json"
      }
    },
    "helpers": {
      "type": "library",
      "root": "libs/helpers",
      "entryFile": "index",
      "sourceRoot": "libs/helpers/src",
      "compilerOptions": {
        "tsConfigPath": "libs/helpers/tsconfig.lib.json"
      }
    }
  }
}